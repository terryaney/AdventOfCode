{
	"compilerOptions": {
	  "target": "es2020",
	  "module": "es2020",
	  "removeComments": true,
	  "declaration": true,
	  "sourceMap": true,
	  "outDir": "./dist",
	  "preserveConstEnums": true,
	  "strict": true,
	  "allowSyntheticDefaultImports": true,
	  "moduleResolution": "node",
	  "forceConsistentCasingInFileNames": true,
	  "importHelpers": true
	},
	"include": [
	  "src"
	],
	"exclude": [
	  "node_modules",
	  "src/template",
	  "src/**/*.test.ts",
	  "src/**/*.temp.ts"
	]
  }